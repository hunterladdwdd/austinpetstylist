.container
  .navbar-header
    %button.navbar-toggle.collapsed{:type => "button", "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
      %span.sr-only Toggle navigation
      %span.glyphicon.glyphicon-align-justify
    = link_to "Austin Pet Stylist", root_path, id: "aps-logo-text"
    #header-logo
      = link_to image_tag("austinpetstylist_logo.jpg"), root_path, class: "navbar-brand aps-logo hidden-xs"
  %nav.navbar-collapse.collapse{"aria-expanded" => "false", "style" => "height: 1px"}
    %ul.nav.nav-pills
      %li{:class => "#{'active' if current_page?(services_path)}"}
        = link_to "Services", services_path
      %li{:class => "#{'active' if current_page?(about_us_path)}"}
        = link_to "About Us", about_us_path
      %li{:class => "#{'active' if current_page?(vip_rewards_path)}"}
        = link_to "VIP Rewards", vip_rewards_path
      %li{:class => "#{'active' if current_page?(policies_path)}"}
        = link_to "Policies", policies_path
      %li{:class => "#{'active' if current_page?(resources_path)}"}
        = link_to "Resources & Referrals", resources_path
      %li{:class => "#{'active' if current_page?(contact_path)}"}
        = link_to "Contact", contact_path
  %ul.nav.navbar-nav.navbar-left.hidden-sm.hidden-xs
    - if !logged_in?
      %li= link_to "Log In", sign_in_path
    - if logged_in?
      %li= link_to "Create Testimonial", new_testimonial_path
      %li= link_to "Log Out", sign_out_path
  #social-media
    %ul
      %li
        %a{:href => "https://www.facebook.com/austinpetstylist?ref=br_tf"}
          = image_tag("facebook_logo.png")
      %li
        %a{:href => "https://twitter.com/atxpetstylist"}
          = image_tag("twitter_logo.png")
  .down-separator.hidden-xs.hidden-sm
    = image_tag("shadow_down.png")